    <children>
        <GridPane fx:id="gridPane">
            <Label text="%ui.mainView.label.word" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <GridPane.margin>
                    <Insets top="3" bottom="3" right="15" left="3"/>
