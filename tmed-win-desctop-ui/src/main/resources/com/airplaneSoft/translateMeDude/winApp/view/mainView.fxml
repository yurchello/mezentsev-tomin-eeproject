            </Label>

            <Label text="%ui.mainView.correct.translation" GridPane.rowIndex="2" GridPane.columnIndex="0">
                <GridPane.margin>
                    <Insets top="3" bottom="3" right="15" left="3"/>
                </GridPane.margin>
            </Label>
            <Label fx:id="correctTranslationLabel" text="ывамиваививиыаыи" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets top="3" bottom="3" right="15" left="3"/>
                </GridPane.margin>
            </Label>
        </GridPane>

        <Label text="%ui.mainView.label.example">
            <VBox.margin>
                <Insets top="3" bottom="3" right="15" left="3"/>
            </VBox.margin>
        </Label>
        <TextArea fx:id="exampleTextArea" editable="false" prefWidth="200" prefHeight="50">
            <VBox.margin>
                <Insets top="3" bottom="3" right="15" left="3"/>
            </VBox.margin>
        </TextArea>
        <GridPane >
